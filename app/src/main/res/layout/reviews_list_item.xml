<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <ImageView
            android:padding="13dp"
            android:id="@+id/iv_pp_image"
            android:layout_gravity="fill_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src = "@android:drawable/btn_dialog"/>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:text="@string/overall_quality"
                android:id="@+id/tv_overall_quality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="@string/lecture_quality"
                android:id="@+id/tv_lecture_quality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="@string/assignment_difficulty"
                android:id="@+id/tv_assignment_difficulty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>


    <TextView
        android:paddingLeft="20dp"
        android:id="@+id/tv_comment"
        android:text="Comments:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</LinearLayout>